#include <stdio.h>

int main () {
    int n = 0;
    int resto = 0;
    printf ("Digite um nÃºmero decimal: ");
    scanf ("%d", &n);
    if (n == 0) {
        printf ("0");
    } else if (n == 1) {
        printf ("1");
    } else {
        while (n >= 2) {
        resto = (n % 2);
        n = (n / 2);
        printf ("%d", resto);
        }
        printf ("%d", n);
    }
    return 0;
}
