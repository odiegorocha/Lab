#include <stdio.h>

int main(void) {
    int n1, n2, n3;
    float media;
    printf ("Digite três números para obter sua média aritmética: \n");
    scanf ("%d%d%d", &n1, &n2, &n3);
    media = (1.0 * (n1 + n2 + n3)/3);
    printf ("A média aritmética entre %d, %d e %d é %f", n1, n2, n3, media);
    return 0;
}
